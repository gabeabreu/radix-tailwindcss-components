{
    "name": "radix-tailwindcss-components",
    "version": "1.0.0",
    "description": "A component library made with functional components from radix and styled with tailwindcss",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --module CommonJS --outDir dist/cjs"
    },
    "author": "gabeabreu",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^17.0.22",
        "@types/react": "^17.0.41",
        "@types/react-dom": "^17.0.14",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.6.2"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "dependencies": {
        "@headlessui/react": "^1.5.0",
        "@radix-ui/react-accordion": "^0.1.6",
        "@radix-ui/react-alert-dialog": "^0.1.7",
        "@radix-ui/react-aspect-ratio": "^0.1.4",
        "@radix-ui/react-avatar": "^0.1.4",
        "@radix-ui/react-checkbox": "^0.1.5",
        "@radix-ui/react-dropdown-menu": "^0.1.6",
        "@radix-ui/react-hover-card": "^0.1.5",
        "@radix-ui/react-icons": "^1.1.0",
        "@radix-ui/react-label": "^0.1.5",
        "@radix-ui/react-popover": "^0.1.6",
        "@radix-ui/react-slider": "^0.1.4",
        "@radix-ui/react-switch": "^0.1.5",
        "@radix-ui/react-tabs": "^0.1.5",
        "@radix-ui/react-toggle": "^0.1.4",
        "@radix-ui/react-toggle-group": "^0.1.5",
        "@radix-ui/react-tooltip": "^0.1.7",
        "classnames": "^2.3.1",
        "prettier": "^2.6.0"
    }
}
